@model StudentPortal.web.Models.AddStudentWithViewModel;
<div class="container">
    <h1 class="fs-3">Add Student</h1>
    <form method="post">
        <div class="mb-3">
            <label for="inputName" class="form-label">Name</label>
            <input type="text" class="form-control" id="inputName" asp-for="Name">
        </div>
        <div class="mb-3">
            <label for="inputEmail" class="form-label">Email address</label>
            <input type="email" class="form-control" id="inputEmail" aria-describedby="emailHelp"
            asp-for="Email">
            <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
        </div>
        <div class="mb-3">
            <label for="inputPhone" class="form-label">Phone</label>
            <input type="number" class="form-control" id="inputPhone" asp-for="Phone">
        </div>
        <div class="mb-3 form-check">
            <input type="checkbox" class="form-check-input" id="Subsrcibed" asp-for="Subscribed">
            <label class="form-check-label" for="Subsrcibed">Subsrcibed</label>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>